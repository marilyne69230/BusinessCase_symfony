{% extends 'base.html.twig' %}

{% block title %}NFT index{% endblock %}

{% block body %}
    <h1>NFT index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Date</th>
                <th>PathImage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nft in nfts %}
            <tr>
                <td>{{ nft.id }}</td>
                <td>{{ nft.price }}</td>
                <td>{{ nft.date ? n_f_t.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ nft.pathImage }}</td>
                <td>
                    <a href="{{ path('app_n_f_t_show', {'id': nft.id}) }}">show</a>
                    <a href="{{ path('app_n_f_t_edit', {'id': nft.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nft_new') }}">Create new</a>
{% endblock %}
